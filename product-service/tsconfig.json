{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
      "include": ["src/**/*", "tests/**/*"]

}